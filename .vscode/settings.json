{
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "editor.formatOnSave": true,
  "editor.rulers": [100],
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    {
      "autoFix": true,
      "language": "javascript"
    },
    {
      "autoFix": true,
      "language": "typescript"
    }
  ],
  "prettier.disableLanguages": ["javascript", "typescript"],
  "typescript.tsdk": "node_modules/typescript/lib"
}
